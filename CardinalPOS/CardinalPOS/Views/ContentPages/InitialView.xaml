<?xml version="1.0" encoding="utf-8" ?>
<local:InitialViewBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CardinalPOS.Views.ContentPages"
             x:Class="CardinalPOS.Views.ContentPages.InitialView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     Padding="0,25,0,0">
            <Label Text="Cardinal"
                       Margin="0,0,0,0"
                       FontFamily="{StaticResource HighlandGothicLightFLF}"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       FontSize="{StaticResource H1}"
                       TextColor="{StaticResource CardinalBackgroundColor}"/>
            <Button Text="MainPageView"
                    Style="{StaticResource CardinalItemButtonStyleAlt}"
                    Command="{Binding MainPageViewCommand}"/>
            <Button Text="TicketAccessControlView"
                    Style="{StaticResource CardinalItemButtonStyleAlt}"
                    Command="{Binding TicketAccessControlViewCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</local:InitialViewBase>